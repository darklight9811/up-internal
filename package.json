{
	"name": "root",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun --bun --cwd ./apps/dashboard dev",
		"build": "bun --bun --cwd ./apps/dashboard build",
		"start": "bun --bun --cwd ./apps/dashboard start",
		"verify": "bun --bun --filter=\"*\" verify --",
		"lint": "bun --bun --filter=\"*\" lint --",
		"test": "bun --bun test --filter=\"*\"",
		"ds": "cd packages/ds && bun",
		"db": "cd packages/domains && bun --bun db",
		"email": "cd packages/emails && bun dev",
		"symlink": "symlink-dir ./public ./apps/dashboard/public",
		"postinstall": "bun run symlink"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@types/bun": "^1.2.20",
		"symlink-dir": "^6.0.5"
	},
	"peerDependencies": {
		"typescript": "^5.9.2"
	},
	"packageManager": "bun@1.2.19",
	"workspaces": {
		"packages": [
			"packages/*",
			"apps/*",
			"scripts"
		],
		"catalog": {
			"react": "^19.1.1",
			"@types/react": "^19.1.10",
			"typescript": "latest",
			"lucide-react": "latest",
			"tailwindcss": "^4.1.12",
			"@legendapp/state": "^3.0.0-beta.31",
			"@tanstack/react-query": "^5.85.3",
			"zod": "^4.0.17"
		}
	}
}
